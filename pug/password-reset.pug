include _mixins.pug

doctype html
// password-reset.pug begin
html(lang='zxx')
	+head
	body

		+header
		+page-nav
		
		main.box-blue

			.section
				.row
					.columns.xlarge-2.large-3.medium-4
						+profile-menu
							
					.column.xlarge-4.large-5.medium-6.end

						.section
							h3.section-title Password Reset
									
							.box-shadow.box-padding-sm

								form
									.form-body
										input(type="password" placeholder="Current Password")
										input(type="password" placeholder="New Password")
										input(type="password" placeholder="Confirm Password")

									.form-footer
										button(type="submit").button.expanded Save



		+footer
		
		+scripts

	// password-reset.pug end